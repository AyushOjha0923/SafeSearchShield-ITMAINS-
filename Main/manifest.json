{
    "name": "SafeSearch Shield",
    "version": "1.1",
    "manifest_version": 3,
    "description": "Block ads and providing extra protection to your family :)",
    "permissions": [
        "webNavigation",
        "storage",
        "tabs",
        "scripting",
        "declarativeNetRequest",
     "geolocation"
    ],
    "host_permissions":[
        "*://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "declarative_net_request":{
      "rule_resources":[
        {
          "id": "ad_blocking_rules",
          "enabled":true,
          "path":"regex.json"
        }
      ]
    }

}
